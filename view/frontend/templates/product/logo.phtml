/** @var Mavenbird\Shopbybrand\Block\Product\Logo $block */
?>
<?php if ($brand = $block->getBrandObject()) : ?>
    <?php if ($block->showBrandInfo() === 'logo') : ?>
        <div class="product-brand-logo">
            <a href="<?= /** @noEscape */ $block->helper()->getBrandUrl($brand) ?>">
                <img src="<?= /** @noEscape */ $block->helper()->getBrandImageUrl($brand) ?>"
                     title="<?= /** @noEscape */ $brand->getValue() ?>"
                     alt="<?= /** @noEscape */ $brand->getValue() ?>"
                     style="width: <?= /** @noEscape */ $block->getLogoWidth() . 'px' ?>;
                            height: <?= /** @noEscape */ $block->getLogoHeight() . 'px' ?>;">
            </a>
        </div>
    <?php else : ?>
        <div class="product-brand-name">
            <a href="<?= /** @noEscape */ $block->helper()->getBrandUrl($brand) ?>">
                <span title="<?= $block->escapeHtml($brand->getValue()) ?>"><?= $block->escapeHtml($brand->getValue()) ?></span>
            </a>
        </div>
    <?php endif; ?>
<?php endif; ?>
